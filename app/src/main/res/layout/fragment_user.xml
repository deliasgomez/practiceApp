<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/parent_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white"
        android:layout_height="match_parent"
        tools:context=".UserFragment">


        <LinearLayout
            android:id="@+id/layout_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/big_size"
            android:layout_marginEnd="@dimen/big_size"
            android:layout_marginStart="@dimen/big_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/frag_user_user_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/image_user"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/frag_user_user_name"
                android:layout_width="0dp"
                android:text="Juan perez"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/medium_size"
                android:textSize="@dimen/big_size_text"
                android:layout_height="match_parent"
                android:layout_weight="0.5"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorApp"
                android:background="@drawable/ic_settings"/>


        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/frag_user_tv_blanc1"
            android:layout_width="0dp"
            android:layout_height="@dimen/small_size"
            android:layout_marginTop="@dimen/medium_size"
            android:background="@color/buscar_edit_text"
            app:layout_constraintTop_toBottomOf="@id/layout_user"
            app:layout_constraintEnd_toEndOf="@id/layout_user"
            app:layout_constraintStart_toStartOf="@id/layout_user"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/frag_user_recyclerView"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/big_size"
            app:layout_constraintTop_toBottomOf="@+id/frag_user_tv_blanc1"
            app:layout_constraintStart_toStartOf="@+id/layout_user"
            app:layout_constraintEnd_toEndOf="@+id/layout_user"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/frag_user_tv_blanc4"
            android:layout_width="0dp"
            android:layout_height="@dimen/big_size"
            android:layout_marginTop="@dimen/big_size"
            android:layout_marginEnd="@dimen/medium_size"
            android:layout_marginStart="@dimen/medium_size"
            android:background="@color/buscar_edit_text"
            app:layout_constraintTop_toBottomOf="@id/frag_user_recyclerView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/frag_user_tv_list_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lista de seguimiento"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/big_size"
            android:textSize="@dimen/big_size_text"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/frag_user_recyclerView"
            app:layout_constraintTop_toBottomOf="@id/frag_user_tv_blanc4"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/frag_user_tv_list_follow_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_size"
            android:text="Crea una lista de seguimiento para no perderte ninguna pelicula o serie de tv"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@id/frag_user_tv_list_follow"
            app:layout_constraintEnd_toEndOf="@id/frag_user_recyclerView"
            app:layout_constraintStart_toStartOf="@id/frag_user_recyclerView"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/frag_user_tv_list_follow_bottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/style_border"
            android:backgroundTint="@color/colorApp"
            android:layout_marginTop="@dimen/medium_size"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="18sp"
            android:text="Empieza una lista de seguimiento"
            app:layout_constraintStart_toStartOf="@id/frag_user_tv_list_follow_description"
            app:layout_constraintEnd_toEndOf="@id/frag_user_tv_list_follow_description"
            app:layout_constraintTop_toBottomOf="@id/frag_user_tv_list_follow_description"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/frag_user_tv_blanc2"
            android:layout_width="0dp"
            android:layout_height="@dimen/big_size"
            android:layout_marginTop="@dimen/big_size"
            android:layout_marginEnd="@dimen/medium_size"
            android:layout_marginStart="@dimen/medium_size"
            android:background="@color/buscar_edit_text"
            app:layout_constraintTop_toBottomOf="@id/frag_user_tv_list_follow_bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/frag_user_tv_recent_views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vistas recientes"
            android:layout_marginTop="@dimen/big_size"
            android:textColor="@color/black"
            android:textSize="@dimen/big_size_text"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/frag_user_tv_list_follow_bottom"
            app:layout_constraintTop_toBottomOf="@id/frag_user_tv_blanc2"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/frag_user_tv_recent_views_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_size"
            android:text="No has visitado ninguna pagina recientemente"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@id/frag_user_tv_recent_views"
            app:layout_constraintEnd_toEndOf="@id/frag_user_tv_list_follow_bottom"
            app:layout_constraintStart_toStartOf="@id/frag_user_tv_list_follow_bottom"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/frag_user_tv_blanc3"
            android:layout_width="0dp"
            android:layout_height="@dimen/big_size"
            android:layout_marginTop="@dimen/big_size"
            android:layout_marginEnd="@dimen/medium_size"
            android:layout_marginStart="@dimen/medium_size"
            android:background="@color/buscar_edit_text"
            app:layout_constraintTop_toBottomOf="@id/frag_user_tv_recent_views_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/frag_user_tv_favorite_persons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perssonas favoritas"
            android:layout_marginTop="@dimen/big_size"
            android:textColor="@color/black"
            android:textSize="@dimen/big_size_text"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/frag_user_tv_list_follow_bottom"
            app:layout_constraintTop_toBottomOf="@id/frag_user_tv_blanc3"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/frag_user_tv_favorite_persons_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_size"
            android:text="No has agregado ninguna persona como favorita"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@id/frag_user_tv_favorite_persons"
            app:layout_constraintEnd_toEndOf="@id/frag_user_tv_list_follow_bottom"
            app:layout_constraintStart_toStartOf="@id/frag_user_tv_list_follow_bottom"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
