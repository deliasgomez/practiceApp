<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/size_200"
    android:layout_height="@dimen/size_180"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/card_functions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/size_text_15"
        android:background="@color/search_edit_text"
        android:layout_marginStart="@dimen/size_20"
        android:layout_marginTop="@dimen/size_20"
        android:layout_marginEnd="@dimen/size_20"
        android:layout_marginBottom="@dimen/size_60"
        android:padding="@dimen/size_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Qualify and get it recommendations" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/card_resume_functions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_text_15"
        android:layout_marginTop="@dimen/size_10"
        android:layout_marginStart="@dimen/size_20"
        app:layout_constraintTop_toBottomOf="@id/card_functions"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Qualifies" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/card_total_functions_performed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_text_15"
        android:layout_marginStart="@dimen/size_20"
        android:layout_marginTop="@dimen/size_10"
        app:layout_constraintTop_toBottomOf="@id/card_resume_functions"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="4"/>

</androidx.constraintlayout.widget.ConstraintLayout>